{
  "name": "modular-football-sim",
  "version": "2.0.0",
  "description": "Professional TypeScript Football Simulation - Migrated from JavaScript",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild src/index.ts --bundle --outfile=dist/bundle.js --format=iife --global-name=FootballSim --sourcemap",
    "watch": "tsc --watch & esbuild src/index.ts --bundle --outfile=dist/bundle.js --format=iife --global-name=FootballSim --sourcemap --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "dev": "npm run watch",
    "lint": "tsc --noEmit --pretty",
    "test": "jest --config jest.config.cjs"
  },
  "keywords": [
    "football",
    "soccer",
    "simulation",
    "typescript",
    "game",
    "ai",
    "tactics"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.12",
    "esbuild-runner": "^2.2.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
